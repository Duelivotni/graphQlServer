type Query {
    getAllCustomers : [Customer]
    getCustomersWithOrder(orderName : String): [Customer]
}

type Mutation {
    addCustomer(input : CustomerInput) : Customer
}

input OrderInput {
    name : String
    price : Float
}

input CustomerInput {
    fullName : String
    orders : [OrderInput] 
}

type Customer {
    id : ID
    fullName : String
    orders : [Order]
}

type Order {
    id : ID
    name : String
    price : Float
}